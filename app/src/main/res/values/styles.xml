<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_app_color</item>
        <item name="colorPrimaryDark">@color/main_app_color</item>
        <item name="colorAccent">@color/main_app_color</item>
    </style>

    <style name="style_for_card_view">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardMaxElevation">8dp</item>
    </style>

    <style name="textviewStyleNormalHeader_new">
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="textviewStyleNormalHeader">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>


</resources>